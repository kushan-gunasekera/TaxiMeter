<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fareBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fare"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currency"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Rs"
                    android:textColor="#fff200"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="0000.00"
                    android:textColor="@color/red"
                    android:textSize="50sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/distanceBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="km"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="00.0"
                    android:textColor="@color/red"
                    android:textSize="50sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<ProgressBar-->
                <!--android:id="@+id/progressBar"-->
                <!--style="?android:attr/progressBarStyle"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:visibility="gone" />-->

                <TextView
                    android:id="@+id/waitingTimeBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting Time"
                    android:textColor="@color/white"
                    android:textSize="36sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeInWhat"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="seconds"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/waitingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textColor="@color/red"
                    android:textSize="50sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/speedBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kmh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="km/h"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="00.0"
                    android:textColor="@color/red"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/light_green"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="START"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/endButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/red"
                    android:gravity="center"
                    android:paddingBottom="30dp"

                    android:paddingTop="30dp"
                    android:text="END"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/pauseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:text="PAUSE"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/resumeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_orange_light"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="RESUME"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#B0000000"
        android:id="@+id/progressBarLayout"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:visibility="visible"
            android:indeterminateTint="@color/white"
            />
    </RelativeLayout>

</RelativeLayout>